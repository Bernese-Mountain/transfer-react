{
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "extends": [
    "react-app",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "react-hooks",
    "@typescript-eslint"
  ],
  "globals": {
    "JSX": true,
    "React": true,
    "NodeJS": true,
    "Promise": true
  },
  "rules": {
    "no-console": "off",
    "curly": "off",
    "jsx-a11y/anchor-is-valid": 0,
    "jsx-a11y/role-supports-aria-props": 0,
    "indent": ["error", 4]
  },
  "parser": "@typescript-eslint/parser"
}
